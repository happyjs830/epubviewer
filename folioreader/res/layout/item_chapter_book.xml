<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/item_index">

    <TextView
        android:id="@+id/textViewIndex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="16dp"
        android:textSize="14dp"
        android:textColor="@color/layout_left_chapter_list_item_index"
        android:includeFontPadding="false"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="0000" />

    <View
        android:id="@+id/devide"
        android:layout_width="1dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:background="@color/layout_left_chapter_list_item_line"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewIndex"/>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="8dp"
        android:textSize="14dp"
        android:textColor="@color/layout_left_chapter_list_item_index"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/devide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="YYYY-MM-DD" />

</androidx.constraintlayout.widget.ConstraintLayout>